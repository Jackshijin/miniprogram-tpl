page{
  background-color: #fafafa;
}
.page{
  padding-bottom: calc(150rpx + env(safe-area-inset-bottom));
}

.times{
  padding: 20rpx 0;
  background-color: #fff;
}
.time{
  height: 64rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #999;
}
.time-t{
  width: 205rpx;
}
.time-val{
  font-size: 26rpx;
  color: #1A1A1A;
}
.time .amount-val {
  font-size: 26rpx;
  font-weight: 400;
  color: #D3A65E;
  line-height: 1;
}
.contact-btn{
  /* height: 110px; */
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #fff;
  padding: 40rpx 0;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  background: #FFFFFF;
  text-align: center;
  font-size: 32rpx;
  color: #666;
  line-height: 1;
  border-top: 1rpx solid #f0f0f0;
}

.invoice-detail {
  box-sizing: border-box;
  margin: 0 30rpx 16rpx;
  padding: 28rpx 0;
  font-size: 28rpx;
  font-weight: 600;
  color: #1A1A1A;
  line-height: 28rpx;
  border-bottom: 1px solid #e6e6e6;
}

.page .footer-btn {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  padding: 40rpx 0;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  background: #FFFFFF;
  text-align: center;
  font-size: 32rpx;
  color: #666;
  line-height: 1;
  border-top: 1rpx solid #f0f0f0;
}
.footer-btn .edit-btn {
  display: flex;
  flex: 1;
  justify-content: center;
}