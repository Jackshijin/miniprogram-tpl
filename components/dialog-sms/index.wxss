/* index.wxss */
.cell {
  padding: 30rpx 50rpx;
  font-size: 24rpx;
  line-height: 36rpx;
  color: #999;
}
.inp {
  /* border:1rpx solid #000; */
  position: absolute;
  left: -1000px;
  opacity: 0;
  height: 10rpx;
  line-height: 10rpx;
}
.inp-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 456rpx;
  margin: 18rpx auto 48rpx auto;
}
.inp-num {
  text-align: center;
  width: 90rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: #ffffff;
  border: 1rpx solid #e0e0e0;
  font-size: 54rpx;
  font-family: DINAlternate-Bold, DINAlternate;
  font-weight: bold;
  color: #1a1a1a;
  position: relative;
  /* margin-right: 32rpx; */
}

.inp-num.active:after {
  content: '';
  display: block;
  position: absolute;
  right: 10rpx;
  top: 20rpx;
  width: 1px;
  height: 50rpx;
  background-color: #999;
  animation: blink 1s infinite steps(1, start);
}
@keyframes blink {
  0% {
    background-color: #fff;
  }
  50% {
    background-color: #999;
  }
  100% {
    background-color: #fff;
  }
}
.get-btn {
  color: #ff803a;
  font-size: 24rpx;
  text-align: center;
  margin-bottom: 70rpx;
}
